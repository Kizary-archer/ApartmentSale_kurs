<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<servlet>
<servlet-name>add</servlet-name>
<servlet-class>app.controllers.AddServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>add</servlet-name>
<url-pattern>/add</url-pattern>
</servlet-mapping>

        <!-- list servlet -->
<servlet>
<servlet-name>list</servlet-name>
<servlet-class>app.controllers.ListServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>list</servlet-name>
<url-pattern>/list</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>addCity</servlet-name>
<servlet-class>app.controllers.CityServlet</servlet-class>
</servlet>

    <servlet-mapping>
        <servlet-name>addCity</servlet-name>
        <url-pattern>/addCity</url-pattern>
    </servlet-mapping>


<servlet-mapping>
<servlet-name>addClient</servlet-name>
<url-pattern>/addClient</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>addClient</servlet-name>
    <servlet-class>app.controllers.ClientServlet</servlet-class>
</servlet>
</web-app>